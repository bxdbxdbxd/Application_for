<FirstScreen>:
    FloatLayout:
        canvas:
            Rectangle:
                source: 'bg_for_menu.jpg'
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        Button:
            size_hint: 0.2, 0.05
            pos: 690, 1050
            text: 'Add'
            on_press: pass
        BoxLayout:
            spacing: 10
            pos: 60, 600
            orientation: 'vertical'
            size_hint: 0.85, 0.3
            Button:
                id: 1_object
                background_normal: ''
                background_color: .3, .3, .4, .85
                text: 'Тц Эдем'
                font_name: 'Roboto-Regular.ttf'
                font_size: 65
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'first_object'
            Button:
                id: 2_object
                background_normal: ''
                background_color: .3, .3, .4, .85
                text: 'Тц Адам'
                font_name: 'Roboto-Regular.ttf'
                font_size: 65
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'second_object'
            Button:
                id: 3_object
                background_normal: ''
                background_color: .3, .3, .4, .85
                text: 'Парк'
                font_name: 'Roboto-Regular.ttf'
                font_size: 65
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'third_object'


<ObjectFirstScreen>:
    FloatLayout:
        orientation: 'vertical'
        Button:
            size_hint: 0.2, 0.05
            pos: 690, 1050
            text: 'Назад'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'

